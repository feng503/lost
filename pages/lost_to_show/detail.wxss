.containsView{
  padding: 15rpx 15rpx 80rpx 15rpx;
  background-color:white;
  border-radius: 2%;
}
.topContainsView{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 18rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}
/* 上部分整体 */
.profileImage{
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
}
/* 头像 */
.topRightView{
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
}
/*头部显示名字和时间整体样式*/
.topRightName{
  font-size: 25rpx;
}
/*用户名称样式*/
.topRightTime{
  font-size: 20rpx;
  color: #b8b2b2;
  margin-top: 10rpx;
}
/*时间样式*/
.in-title{
  font-size: 29rpx;
  font-family: "微软雅黑";
  color:#606060;
  line-height: 60rpx;
  border-left: 10rpx solid #4ec4c8;
  border-bottom: 1rpx solid #eeeeee;
}
.clear{
  display: flex;
  flex-direction: column;
  height:12rpx;
  background: rgba(238, 238, 238, 0.4);
}
/* 图片样式 */
.tupian{
  margin-top: 25rpx;
  margin-left: 1.5%;
  justify-content: center;
  width: 97%;
  border-radius: 16rpx;
  box-shadow: 0 0 4px 3px rgba(85, 85, 85, 0.2);
}
.show-img{
  color: #409eff;
  margin-left: 10rpx;
  font-size: 20rpx; 
}
.no-comment{
  font-size: 32rpx;
  font-weight: 500;
  margin: 30rpx;
  color: rgba(13, 13, 13, 0.5);
}
.comment-tab{
  font-size: 28rpx;
  font-weight: 500;
  margin: 5rpx 1rpx;
  color: rgba(13, 13, 13, 0.8);
}
.comment-num{
  float: left;
  width: 50%;
  font-weight: 600;
  font-size: 27rpx;
  color: #595828;
}
.comment-list{
  width: 100%;
}
.add-comment{
  width:100%;
  height:80rpx;
  background-color:white;
  box-shadow: 0px -1px 5px 1px rgba(230, 230, 230, 0.3);
  padding: 18rpx 8rpx 10rpx 13rpx;
  font-size: 27rpx;
  position:fixed; 
  bottom: 0;
}
.add-comment input{
  float: left;
  margin-top:4rpx; 
  width: 85%;
}
.add-comment view{
  background: #34bfa3;
  float: right;
  border-radius: 5%;
  height: 50rpx;
  margin: 0 4rpx;
  width: 12%;
  padding: 9rpx 17rpx;
  color: #242424;
}
.com-detail{
  margin-top: -28rpx;
}
.comment{
  border-bottom: 1rpx rgba(200, 200, 200, 0.8) solid;
}
.commentTab{
  display: flex;
  flex-direction: row;
  margin-bottom: 7rpx;
  margin-top: 6rpx;
}
.comment-replay{
  display: flex;
  margin-left: 36rpx;
  flex-direction: row;
  margin-bottom: 6rpx;
  margin-top: 3rpx;
}
.commenterImg{
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  box-shadow: 0 0 3px 1px rgba(221, 218, 218, 0.15);
}
.commentName{
  font-size: 22rpx;
  margin-top: -22rpx;
}
.commentTime{
  font-size: 18rpx;
  color: #b8b2b2;
  margin-top: 3rpx;
}
.comment-detail{
  font-size: 21rpx;
}
.commentName-reply{
  font-size: 19rpx;
  margin-top: -21rpx;
}
.commentTime-reply{
  font-size: 17rpx;
  color: #b8b2b2;
  margin-top: 4rpx;
}
.comment-detail-reply{
  font-size: 19rpx;
}
.deleteComment{
  font-size: 17rpx;
  border-bottom: 1rpx #f56c6c solid;
  color: #f56c6c;
  z-index: 500;
}
/* 举报 */
.report{
  margin-left: auto; 
  width: 36rpx;
  padding: 5rpx;
  height: 36rpx;
  border-radius: 50%;
  box-shadow: 0 0 2px 2px rgba(221, 218, 218, 0.3);
}
/* 图片靠右 */
.icon{
  margin-left: 100rpx; 
  padding-top:6rpx;
}
.button{
    height: 65rpx;
    line-height: 65rpx;
    width: 300rpx;
    background-color: #409eff;
    text-align: center;
    vertical-align:middle;
}
