  <textarea class="content" maxlength="11" value="{{information}}" bindblur='informationInput'name="content" placeholder="您的电话或qq" ></textarea>
  </view>
  </view>
  <view class="line"></view>
  <view class="item">
  <view class="img">
  <image src="/images/geren/weizhi.png" style="width:17px;height:17px;margin-left:3px;"></image>
  </view>
