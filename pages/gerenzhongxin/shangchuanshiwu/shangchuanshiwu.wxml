  <textarea class="content" maxlength="100" value="{{addr}}" bindblur='addrInput' name="content"  placeholder="描述您捡到位置" ></textarea>
  </view>
  <button type="primary" form-type='submit' bindtap='orderMeeting'> 提交 </button>

 
